<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            tools:context=".edit.EditSampleFragment">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_title"
                android:text="EditSample"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"

        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_edit_description" android:layout_below="@id/tv_edit_title"/>


        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_below="@id/tv_edit_description" android:id="@+id/rl_edit_datetime">
            <CalendarView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/calv_edit_date"

            >

            </CalendarView>
            <TimePicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/tp_edit_time"
                        android:layout_below="@id/calv_edit_date" android:timePickerMode="spinner">

            </TimePicker>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_below="@id/rl_edit_datetime">


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/ll_">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Location"
                          android:textAppearance="@style/TextAppearance.AppCompat.Title"
                          android:id="@+id/tv_edit_location"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_below="@id/tv_edit_location">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_edit_current" android:layout_gravity="start"
                          />

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="Change"
                        android:layout_gravity="end"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>